
<form id="formAmountSave" class="form-horizontal auth-form" method="post" autocomplete="off">
    <ul>
        @if (ViewBag.Error is not null)
        {
            @foreach (var error in ViewBag.Error)
            {
                <li class="text-danger">@error</li>
            }
        }
    </ul>
    <div class="row">
        <div class="form-group mb-2">
            <label class="form-label" for="userpassword">Amount Type Name</label>
            <div class="input-group">
                <input asp-for="AmountTypeName" type="text" class="form-control" placeholder="Eg.Winning">
            </div>
            <span class="text-danger" asp-validation-for="AmountTypeName"></span>
        </div>



        <div class="form-group mb-2">
            <label class="form-label" for="userpassword">Is Active</label>
            <div class="form-check form-switch">
                <input asp-for="IsActive" type="checkbox" class="form-check-input">
            </div>
        </div>
    </div>


    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">SaveChanges</button>
    </div>
</form><!--end form-->

<script>

    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("AmountSave", "AmountType")',
        containerSelector: '#add-new .modal-body',
        selector: '#formAmountSave'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');
