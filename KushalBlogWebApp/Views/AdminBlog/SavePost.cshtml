@using KushalBlogWebApp.Data.Model
@model AdminBlogModelVm


<form id="formBlogSave" class="form-horizontal auth-form" method="post" autocomplete="off">

    <ul>
        @if (ViewBag.Error is not null)
        {
            @foreach (var error in ViewBag.Error)
            {
                <li class="text-danger">@error</li>
            }
        }
    </ul>
    <div class="row">
        <div class="form-group mb-2">
            <label class="form-label" for="blogHeader">Blog Header</label>
            <div class="input-group">
                <input asp-for="BlogHeader" type="text" class="form-control" placeholder="Header" id="blogHeader">
            </div>
            <span class="text-danger" asp-validation-for="BlogHeader"></span>
        </div>
        <div class="form-group mb-2">
            <label class="form-label" for="blogBody">Blog Body</label>
            <div class="input-group">
                <textarea asp-for="BlogBody" type="text" class="form-control" placeholder="Blog Body" id="blogBody"> </textarea>
            </div>
            <span class="text-danger" asp-validation-for="BlogBody"></span>
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="image">Image</label>
            <div class="input-group">
                <input asp-for="ImageFile" type="file" id="input-file-now" class="dropify" />
                <img src="" height="125" width="125" alt="" hidden class="rounded me-1" id="input-file-noww">
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="form-label" for="writtenBy">Written By</label>
            <div class="input-group">
                <input asp-for="CreatedBy" type="text" class="form-control" placeholder="Blog Body" id="writtenBy">
            </div>
            <span class="text-danger" asp-validation-for="CreatedBy"></span>
        </div>
        <div id="dynamicFieldsContainer">          
        </div>
            <div class="col text-end mt-3">
                <button type="button" class="btn btn-sm btn-success" onclick="addDynamicField()">Add New Field</button>
            </div>
        <div class="form-check form-switch">
            <input asp-for="PinnedStatus" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Pin</label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">SaveChanges</button>
    </div>
</form><!--end form-->

<script>
    var dynamicFieldsCount = 0;

    function addDynamicField() {
        var currentCount = dynamicFieldsCount++;

        var dynamicFieldHtml = `
            <div class="row dynamic-field" id="dynamicField${currentCount}">
                <label class="mt-3 mb-2" style="font-weight: bold;">Section ${currentCount}</label>
                <div class="form-group mb-2">
                    <label class="form-label" for="blogHeader">Blog Header</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Header" name="DynamicFields[${currentCount}].BlogHeader">
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label" for="blogBody">Blog Body</label>
                    <div class="input-group">
                        <textarea class="form-control" placeholder="Blog Body" name="DynamicFields[${currentCount}].BlogBody"></textarea>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label" for="image">Image</label>
                    <div class="input-group">
                        <input type="file" class="dropify" name="DynamicFields[${currentCount}].ImageFile" />
                        <img src="" height="125" width="125" alt="" hidden class="rounded me-1">
                    </div>
                </div>
                <div class="col text-end">
                    <button type="button" class="btn btn-sm btn-danger" onclick="removeDynamicField(${currentCount})">Remove Section ${currentCount}</button>
                </div>
            </div>
        `;

        document.getElementById('dynamicFieldsContainer').insertAdjacentHTML('beforeend', dynamicFieldHtml);
    }


    // function removeDynamicField(dynamicFieldId) {
    //     var dynamicField = document.getElementById(`dynamicField${dynamicFieldId}`);
    //     dynamicField.remove();
    // }
    function removeDynamicField(dynamicFieldId) {
        var dynamicField = document.getElementById(`dynamicField${dynamicFieldId}`);
        dynamicField.remove();

        // Update the IDs of the remaining dynamic fields
        var dynamicFields = document.querySelectorAll('.dynamic-field');
        dynamicFields.forEach(function (field, index) {
            var currentId = field.id.replace('dynamicField', '');
            if (index >= dynamicFieldId) {
                // Update the ID and labels
                field.id = `dynamicField${parseInt(currentId) - 1}`;
                field.querySelector('label').innerText = `Section ${parseInt(currentId) - 1}`;

                // Update the name attributes
                field.querySelectorAll('[name]').forEach(function (element) {
                    var attributeName = element.getAttribute('name');
                    element.setAttribute('name', attributeName.replace(`DynamicFields[${currentId}]`, `DynamicFields[${parseInt(currentId) - 1}]`));
                });

                // Update the button text
                field.querySelector('button').innerText = `Remove Section ${parseInt(currentId) - 1}`;
            }
        });

        // Update the dynamicFieldsCount
        dynamicFieldsCount--;
    }
        FormHandler.init({
            method: 'POST',
            actionUrl: '@Url.Action("SavePost", "AdminBlog")',
            containerSelector: '#add-new .modal-body',
            selector: '#formBlogSave'
        }, function () {
            $("#add-new .modal-body").html("");
            $("#add-new .modal-title").html("");
            $("#add-new").modal('hide');

            Pagination.getData();
        });
 
    </script>