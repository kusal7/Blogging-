@using KushalBlogWebApp.Data.Model
@model AdminBlogModelVm


<form id="formBlogSave" class="form-horizontal auth-form" method="post" autocomplete="off">

    <ul>
        @if (ViewBag.Error is not null)
        {
            @foreach (var error in ViewBag.Error)
            {
                <li class="text-danger">@error</li>
            }
        }
    </ul>
    <div class="row">
        <div class="form-group mb-2">
            <label class="form-label" for="blogHeader">Blog Header</label>
            <div class="input-group">
                <input asp-for="BlogHeader" type="text" class="form-control" placeholder="Header" id="blogHeader">
            </div>
            <span class="text-danger" asp-validation-for="BlogHeader"></span>
        </div>
        <div class="form-group mb-2">
            <label class="form-label" for="blogBody">Blog Body</label>
            <div class="input-group">
                <textarea asp-for="BlogBody" type="text" class="form-control" placeholder="Blog Body" id="blogBody"> </textarea>
            </div>
            <span class="text-danger" asp-validation-for="BlogBody"></span>
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="image">Image</label>
            <div class="input-group">
                <input asp-for="ImageFile" type="file" id="input-file-now" class="dropify" />
                <img src="" height="125" width="125" alt="" hidden class="rounded me-1" id="input-file-noww">
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="form-label" for="writtenBy">Written By</label>
            <div class="input-group">
                <input asp-for="CreatedBy" type="text" class="form-control" placeholder="Blog Body" id="writtenBy">
            </div>
            <span class="text-danger" asp-validation-for="CreatedBy"></span>
        </div>
        <div class="form-check form-switch">
            <input asp-for="PinnedStatus" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Pin</label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">SaveChanges</button>
    </div>
</form><!--end form-->

<script>
    
        FormHandler.init({
            method: 'POST',
            actionUrl: '@Url.Action("SavePost", "AdminBlog")',
            containerSelector: '#add-new .modal-body',
            selector: '#formBlogSave'
        }, function () {
            $("#add-new .modal-body").html("");
            $("#add-new .modal-title").html("");
            $("#add-new").modal('hide');

            Pagination.getData();
        });
 
    </script>