@using KushalBlogWebApp.Data.Common.Paging
@using KushalBlogWebApp.Models.Pagination
@using KushalBlogWebApp.Data.Model
@model PagedResponse<BlogModel>

@{
    int Sn = 1;
}
<table id="datatable-buttons12" class="table table-striped dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>S.No</th>
            <th>Amount Type Name</th>
            <th>Status</th>
            <th>Action</th>

        </tr>
    </thead>


    <tbody>

        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@Sn</td>
                <td>@item.BlogHeader</td>
                <td>@item.BlogBody</td>

           

                <td name="buttons">
                    <div class=" float-center">



                       

                            <button id="bEdit" style="cursor:pointer" type="button" class="btn btn-sm btn-soft-success btn-circle me-2" data-toggle="tooltip" title="Edit Amount Type" onclick="ShowPopUp('@Url.Action("AmountEdit", "AmountType", new { Id = item.Id })', 'Update Amount Type')"><i class="dripicons-pencil"></i></button>
                    
                  
                            <button id="bCanc" style="cursor:pointer" type="button" class="btn btn-sm btn-soft-danger btn-circle" data-toggle="tooltip" title="Delete Amount Type" onclick="ShowPopUp('@Url.Action("AmountDelete", "AmountType", new { Id = item.Id })', 'Delete Amount Type','modal-dialog modal-md')"><i class="dripicons-cross" aria-hidden="true"></i></button>

                    </div>
                </td>
            </tr>
            Sn = Sn + 1;
        }

    </tbody>
</table>
<partial name="_PaginationFooter"
         model="new PaginationFooter(Model.PageNumber, Model.PageSize, Model.Items.Count(), Model.FilteredCount, Model.TotalCount, Model.TotalPages)" />